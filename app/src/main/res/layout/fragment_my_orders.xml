<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical">

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_shopping_bag_24"
                android:contentDescription="Orders icon"
                app:tint="@color/primary_green" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_orders_title"
                    android:textColor="@color/primary_green"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/orders_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You have 0 orders"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Sync Status -->
            <ImageView
                android:id="@+id/sync_status_header"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sync_24"
                android:contentDescription="Sync status"
                app:tint="@color/primary_green" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Filter Options -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/status_filter_chips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Orders"
                android:checked="true"
                app:chipBackgroundColor="@color/primary_green_light"
                app:chipStrokeColor="@color/primary_green" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_pending"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                app:chipBackgroundColor="@color/primary_green_light"
                app:chipStrokeColor="@color/primary_green" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_approved"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved"
                app:chipBackgroundColor="@color/primary_green_light"
                app:chipStrokeColor="@color/primary_green" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_delivered"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered"
                app:chipBackgroundColor="@color/primary_green_light"
                app:chipStrokeColor="@color/primary_green" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Orders RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orders_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_shopping_bag_24"
            android:contentDescription="@string/no_orders_icon"
            app:tint="@color/text_hint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_orders_yet"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_shopping_message"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_green"
            android:text="@string/start_shopping"
            android:textColor="@color/white"
            android:paddingHorizontal="32dp" />

    </LinearLayout>

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/loading_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:indeterminateTint="@color/primary_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading your orders..."
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
