<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/primary_green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/header_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_local_offer_24"
                android:layout_marginBottom="12dp"
                app:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Special Offers"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amazing deals just for you!"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:alpha="0.9" />

            <TextView
                android:id="@+id/offers_count_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 offers available"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/refresh_offers_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="12dp"
                android:text="Refresh Offers"
                android:textSize="12sp"
                android:textColor="@color/primary_green"
                android:backgroundTint="@color/white"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_refresh_24"
                app:iconSize="16dp"
                app:iconGravity="start"
                style="@style/Widget.Material3.Button.UnelevatedButton" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/loading_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:indeterminateTint="@color/primary_green" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading amazing offers..."
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Offers RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offers_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="8dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:visibility="gone" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_local_offer_24"
            android:alpha="0.6"
            app:tint="@color/text_hint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Offers Available"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check back later for amazing deals and discounts on your favorite products!"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/browse_products_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse Products"
            android:textSize="16sp"
            app:icon="@drawable/ic_shopping_cart_24"
            app:iconGravity="start"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</LinearLayout>
